<h1>All Tickets</h1>

<%= link_to 'New Ticket', new_ticket_path %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Status</th>
      <!-- Add other ticket attributes as headers -->
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.title %></td>
        <td><%= ticket.description %></td>
        <td><%= ticket.status %></td>
        <!-- Add other ticket attributes as table data -->
        <td>
          <%= link_to 'Show', ticket_path(ticket) %>
          <%= link_to 'Edit', edit_ticket_path(ticket) %>
          <%= link_to 'Delete', ticket_path(ticket), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
