<h1>Create Ticket</h1>

<%= form_for @ticket do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label :status %>
    <%= f.select :status, ['Open', 'In Progress', 'Closed'] %>
  </div>
  <div>
    <%= f.submit "Create" %>
  </div>
<% end %>
